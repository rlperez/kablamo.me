<custom-card>
  <h2 slot="headline">
    <a href="{{ item.url | url }}">{{ item.data.title }}</a>
  </h2>
  <span slot="date">{% include "partials/date.njk" %}</slot>

  <div slot="content" class="blog-content">{{ item.data.description | markdownFormat | safe }}</div>
  {% if item.data.tags.length >= 1 %}
    <div slot="tag" class="taglist">
       {% for tag in item.data.tags %}
         {% if tag != "posts" %}
         <a href="{{ 'tags/' + tag | url }}"><span class="button post-tag">{{ tag }}</span></a>
         {% endif %}
       {% endfor %}
     </div>
   {% endif %}
</custom-card>

{% css "inline" %}
  {% include "../../assets/css/components/custom-card.css" %}
{% endcss %}
