<custom-card>
  <h2 slot="headline">{{repoData.name}}</h2>
  <span slot="date">
    {% if repoData.latest_release.tag != null %}<b>Version:</b> {{repoData.latest_release.tag}}{% endif %}
    {% if repoData.latest_release.published %}
    {% set definedDate = repoData.latest_release.published %}
    <b>Updated:</b> {% include "partials/date.njk" %}
    {% endif %}
  </span>
  <p slot="content" class="blog-content">{{repoData.description}}</p>
  <footer slot="footer" class="taglist">
    {% for language in repoData.details.languages %}
    <div class="button post-tag">{{ language }}</div>
    {% endfor %}
  </footer>
</custom-card>

{% css "inline" %}
  {% include "../../assets/css/components/custom-card.css" %}
  custom-card { margin-bottom: 3.5rem!important; }
{% endcss %}
